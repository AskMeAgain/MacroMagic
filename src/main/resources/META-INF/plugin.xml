<idea-plugin>
    <id>io.github.askmeagain.macromagic.MacroMagic</id>
    <name>MacroMagic</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Macro Magic" secondary="false" icon="AllIcons.General.Modified" anchor="right"
                    factoryClass="io.github.askmeagain.macromagic.windows.MacroMagicToolWindow"/>
    </extensions>

    <applicationListeners>
        <listener class="io.github.askmeagain.macromagic.listener.ActionRecorderListener"
                  topic="com.intellij.openapi.actionSystem.ex.AnActionListener"/>
    </applicationListeners>

    <projectListeners>

    </projectListeners>

    <actions>
        <!-- Add your actions here -->
        <action id="io.github.askmeagain.macromagic.actions.RecordMacroAction"
                class="io.github.askmeagain.macromagic.actions.RecordMacroAction"
                text="MacroMagicRecordingAction"
                description="MacroMagicRecordingAction"/>
        <action id="io.github.askmeagain.macromagic.actions.RunMacroAction"
                class="io.github.askmeagain.macromagic.actions.RunMacroAction"
                text="MacroMagicRunAction"
                description="MacroMagicRunAction"/>
        <action id="io.github.askmeagain.macromagic.actions.PersistMacroAction"
                class="io.github.askmeagain.macromagic.actions.PersistMacroAction" text="MacroMagicPersistMacro"
                description="MacroMagicPersistMacro"/>
        <action id="io.github.askmeagain.macromagic.actions.internal.PressKeyAction"
                class="io.github.askmeagain.macromagic.actions.internal.PressKeyAction" text="MacroMagicPressKey"
                description="MacroMagicPersistMacro"/>
        <action id="io.github.askmeagain.macromagic.actions.LoadMacroAction"
                class="io.github.askmeagain.macromagic.actions.LoadMacroAction" text="MacroMagicLoadAction"
                description="MacroMagicLoadAction"/>
        <action id="io.github.askmeagain.macromagic.actions.OpenMacroMagicToolWindow"
                class="io.github.askmeagain.macromagic.actions.OpenMacroMagicToolWindow" text="MacroMagicOpenToolWindow"
                description="MacroMagicOpenToolWindow"/>
    </actions>
</idea-plugin>