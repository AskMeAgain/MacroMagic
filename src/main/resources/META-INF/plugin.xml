<idea-plugin>
    <id>io.github.askmeagain.macromagic.MacroMagic</id>
    <name>MacroMagic</name>
    <vendor email="20632124+AskMeAgain@users.noreply.github.com" url="https://github.com/AskMeAgain">AskMeAgain</vendor>

    <description>
        <!-- Will be added via Gradle script-->
    </description>

    <idea-version since-build="213.0"/>

    <version>0.0.1</version>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Macro Magic" secondary="false"
                    icon="AllIcons.Diff.MagicResolveToolbar"
                    anchor="right"
                    factoryClass="io.github.askmeagain.macromagic.windows.MacroMagicToolWindow"/>
        <applicationConfigurable
                parentId="tools"
                instance="io.github.askmeagain.macromagic.service.SettingsGuiManager"
                id="io.github.askmeagain.macromagic.service.SettingsGuiManager"
                displayName="Macro Magic"/>
    </extensions>

    <applicationListeners>
        <listener class="io.github.askmeagain.macromagic.listener.ActionRecorderListener"
                  topic="com.intellij.openapi.actionSystem.ex.AnActionListener"/>
    </applicationListeners>

    <projectListeners>

    </projectListeners>

    <actions>
        <group id="io.github.askmeagain.macromagic.group.history"
               text="History Group"
               popup="false">
            <action id="io.github.askmeagain.macromagic.actions.internal.CreateNewMacroAction"
                    class="io.github.askmeagain.macromagic.actions.internal.CreateNewMacroAction"
                    text="CreateNewMacroAction"
                    icon="AllIcons.Actions.MenuSaveall"
                    description="CreateNewMacroAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.MoveActionUpAction"
                    class="io.github.askmeagain.macromagic.actions.internal.MoveActionUpAction"
                    text="MoveActionUpAction"
                    icon="AllIcons.Actions.MoveUp"
                    description="MoveActionUpAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.MoveActionDownAction"
                    class="io.github.askmeagain.macromagic.actions.internal.MoveActionDownAction"
                    text="MoveActionDownAction"
                    icon="AllIcons.Actions.MoveDown"
                    description="MoveActionDownAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.ClearHistoryAction"
                    class="io.github.askmeagain.macromagic.actions.internal.ClearHistoryAction"
                    text="ClearHistoryAction"
                    icon="AllIcons.Actions.GC"
                    description="ClearHistoryAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.DuplicateAction"
                    class="io.github.askmeagain.macromagic.actions.internal.DuplicateAction"
                    text="DuplicateAction"
                    icon="AllIcons.Actions.Copy"
                    description="DuplicateAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.RemoveEntryFromHistoryAction"
                    class="io.github.askmeagain.macromagic.actions.internal.RemoveEntryFromHistoryAction"
                    text="RemoveEntryFromHistoryAction"
                    icon="AllIcons.General.Remove"
                    description="RemoveEntryFromHistoryAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.StartStopRecordingAction"
                    class="io.github.askmeagain.macromagic.actions.internal.StartStopRecordingAction"
                    text="StartStopRecordingAction"
                    icon="AllIcons.Actions.Suspend"
                    description="StartStopRecordingAction"/>
        </group>
        <group id="io.github.askmeagain.macromagic.group.macros"
               text="Macro Group"
               popup="false">
            <action id="io.github.askmeagain.macromagic.actions.internal.CombineMacroAction"
                    class="io.github.askmeagain.macromagic.actions.internal.CombineMacroAction"
                    text="CombineMacroAction"
                    icon="AllIcons.Vcs.Merge"
                    description="CombineMacroAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.DeleteMacroAction"
                    class="io.github.askmeagain.macromagic.actions.internal.DeleteMacroAction"
                    text="DeleteMacroAction"
                    icon="AllIcons.Actions.GC"
                    description="DeleteMacroAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.ExtractMacroToHistoryAction"
                    class="io.github.askmeagain.macromagic.actions.internal.ExtractMacroToHistoryAction"
                    text="ExtractMacroToHistoryAction"
                    icon="AllIcons.Vcs.Branch"
                    description="ExtractMacroToHistoryAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.ImportMacroToHistoryAction"
                    class="io.github.askmeagain.macromagic.actions.internal.ImportMacroToHistoryAction"
                    text="ImportMacroToHistoryAction"
                    icon="AllIcons.Actions.Upload"
                    description="ImportMacroToHistoryAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.RegisterShortcutAction"
                    class="io.github.askmeagain.macromagic.actions.internal.RegisterShortcutAction"
                    text="RegisterShortcutAction"
                    icon="AllIcons.General.Settings"
                    description="RegisterShortcutAction"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.ImportMacroFromXml"
                    class="io.github.askmeagain.macromagic.actions.internal.ImportMacroFromXml"
                    text="ImportMacroFromXml"
                    icon="AllIcons.ToolbarDecorator.Import"
                    description="ImportMacroFromXml"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.ExportMacroToXml"
                    class="io.github.askmeagain.macromagic.actions.internal.ExportMacroToXml"
                    text="ExportMacroToXml"
                    icon="AllIcons.ToolbarDecorator.Export"
                    description="ExportMacroToXml"/>
        </group>

        <action id="io.github.askmeagain.macromagic.actions.PressKeyAction"
                class="io.github.askmeagain.macromagic.actions.PressKeyAction" text="MacroMagicPressKey"
                description="MacroMagicPersistMacro"/>

        <group id="io.github.askmeagain.macromagic.actions.groups.refactoring"
               text="MacroMagic"
               popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"
                          relative-to-action="ProjectViewPopupMenuRefactoringGroup"/>
        </group>
        <group id="io.github.askmeagain.macromagic.actions.groups.utils"
               text="MacroMagic Utils"
               icon="AllIcons.Modules.Annotation"
               popup="true">
            <add-to-group group-id="io.github.askmeagain.macromagic.group.history"
                          anchor="before"
                          relative-to-action="io.github.askmeagain.macromagic.actions.internal.StartStopRecordingAction"/>

            <action id="io.github.askmeagain.macromagic.actions.internal.cursor.SelectClassAction"
                    class="io.github.askmeagain.macromagic.actions.internal.cursor.SelectClassAction"
                    text="SelectClass"
                    description="SelectClass"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.cursor.SelectAnnotation"
                    class="io.github.askmeagain.macromagic.actions.internal.cursor.SelectAnnotation"
                    text="SelectAnnotation"
                    description="SelectAnnotation"/>
            <action id="io.github.askmeagain.macromagic.actions.internal.cursor.PlaceCursorAtTopAction"
                    class="io.github.askmeagain.macromagic.actions.internal.cursor.PlaceCursorAtTopAction"
                    text="PlaceCursorAtTopAction"
                    description="PlaceCursorAtTopAction"/>
        </group>
    </actions>
</idea-plugin>